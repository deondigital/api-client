{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["es6"],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types", "types"
    ],
  },
  "exclude": [
    "node_modules",
    ".npm",
  ]
}
